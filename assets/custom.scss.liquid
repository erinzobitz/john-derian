.product-quickshop .product-menu { padding-right: 47px; padding-left: 49px; padding-top: 27px; padding-bottom: 27px; }
.product-quickshop .product-quickshop-link { left: 43px; color: #3b3b3b; font-family: "Rubik"; font-size: 11px; font-weight: 400; text-transform: uppercase; letter-spacing: 1.5px; }

