.section-related-products { font-size: 0; }
.related-products-title { color: #202020; font-family: Ovo; font-size: 24px; font-weight: 400; text-transform: uppercase; letter-spacing: 2.82px; }

.mobile-only { display: none !important; }

.hidden-checkboxes { display: none; }


/* ------------------------------------------------------------ *\
	Page styles
\* ------------------------------------------------------------ */

